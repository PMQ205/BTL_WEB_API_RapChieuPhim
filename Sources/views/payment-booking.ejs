    // X·ª≠ l√Ω thanh to√°n
    async function proceedPayment() {
  const method = document.querySelector('input[name="paymentMethod"]:checked').value;
  
  if (method !== 'vnpay') {
    alert('Ph∆∞∆°ng th·ª©c thanh to√°n ch∆∞a ƒë∆∞·ª£c h·ªó tr·ª£');
    return;
  }

  if (!window.MaLich || !window.totalAmount) {
    alert('Th√¥ng tin v√© kh√¥ng h·ª£p l·ªá');
    return;
  }

  document.getElementById('loadingSpinner').style.display = 'block';
  document.getElementById('paymentBtn').disabled = true;

  try {
    // L·∫§Y L·∫†I ticketInfo TR∆Ø·ªöC KHI FETCH üî•üî•üî•
    const ticketInfo = JSON.parse(sessionStorage.getItem('ticketInfo'));
    const seatData = ticketInfo.seatData || [];

    const response = await fetch('/api/payment/create-payment-url', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        MaLich: parseInt(window.MaLich),
        SoTien: window.totalAmount,
        seatData // G·ª≠i danh s√°ch gh·∫ø l√™n BE üî•
      }),
    });

    const data = await response.json();

    if (data.success) {
      // L∆∞u orderId
      ticketInfo.orderId = data.orderId;
      sessionStorage.setItem('ticketInfo', JSON.stringify(ticketInfo));

      // T·∫°o URL thanh to√°n VNPay
      const paymentUrl = new URL(data.paymentUrl);
      paymentUrl.searchParams.append('seatData', JSON.stringify(seatData));

      window.location.href = paymentUrl.toString();
    } else {
      alert('L·ªói: ' + (data.message || 'Kh√¥ng th·ªÉ t·∫°o URL thanh to√°n'));
      document.getElementById('loadingSpinner').style.display = 'none';
      document.getElementById('paymentBtn').disabled = false;
    }
  } catch (error) {
    console.error('Payment error:', error);
    alert('L·ªói khi t·∫°o thanh to√°n: ' + error.message);
    document.getElementById('loadingSpinner').style.display = 'none';
    document.getElementById('paymentBtn').disabled = false;
  }
}


    // Load th√¥ng tin v√© khi trang load
    document.addEventListener('DOMContentLoaded', loadTicketInfo);
  </script>
</body>
</html>
