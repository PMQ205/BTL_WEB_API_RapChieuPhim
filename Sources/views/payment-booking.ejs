        // L∆∞u MaLich v√† totalAmount ƒë·ªÉ d√πng khi thanh to√°n
        window.MaLich = info.MaLich;
        window.totalAmount = totalAmount;
      } catch (error) {
        console.error('L·ªói parse ticketInfo:', error);
        alert('C√≥ l·ªói x·∫£y ra. Vui l√≤ng ƒë·∫∑t v√© l·∫°i.');
        window.location.href = '/';
