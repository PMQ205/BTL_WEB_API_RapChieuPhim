    </div>

    <!-- N√∫t h√†nh ƒë·ªông -->
    <div class="action-buttons">
      <button onclick="window.history.back()" class="btn btn-secondary">Quay l·∫°i</button>
      <button onclick="proceedPayment()" class="btn btn-primary" id="paymentBtn">Thanh to√°n VNPay</button>
    </div>

    <!-- Loading spinner -->
